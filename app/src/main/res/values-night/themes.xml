<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubCloner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GitHubCloner.AppBar" parent="Theme.GitHubCloner">
        <item name="android:background">@color/black_dim</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.GitHubCloner.Profile" parent="Theme.GitHubCloner">
        <item name="android:background">@drawable/profile_dark_bg</item>
    </style>
    <style name="Theme.GitHubCloner.Profile.Name" parent="Theme.GitHubCloner">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.GitHubCloner.Repository" parent="Theme.GitHubCloner">
        <item name="android:background">@drawable/repo_dark_bg</item>
    </style>
    <style name="Theme.GitHubCloner.Repository.Name" parent="Theme.GitHubCloner">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.GitHubCloner.Counter" parent="Theme.GitHubCloner">
        <item name="android:background">@drawable/counter_dark_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.GitHubCloner.Download" parent="Theme.GitHubCloner">
        <item name="android:background">@drawable/download_bg_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.GitHubCloner.ViewOnGitHub" parent="Theme.GitHubCloner">
        <item name="android:drawableEnd">@drawable/ic_github_light</item>
    </style>
    <style name="Theme.GitHubCloner.GitHubMark" parent="Theme.GitHubCloner">
        <item name="android:src">@drawable/github_mark_light</item>
    </style>
</resources>